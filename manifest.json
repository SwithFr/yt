{
  "manifest_version": 2,
  "name": "Youtube cleaner",
  "description": "This extension allows you to hide some unwanted videos and auto desable annotations.",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "include_globs":    [
        "https://www.youtube.com/*"
      ],
      "css": [
        "css/yt.css"
      ],
      "js": [
        "js/yt.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Options",
    "default_popup": "html/popup.html"
  },
  "icons": {
    "128": "img/icon.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://www.youtube.com/*"
  ]
}